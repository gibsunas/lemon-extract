{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "rootDir": "lib/",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "types": [ "node"],
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@lemon/extract/*": [
                "./lib/*"
            ]
        }
    },
    "include": [
        "lib/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
